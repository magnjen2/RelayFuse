<UserControl x:Class="RelaySettingToolView.SettingMergerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelaySettingToolView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AllowDrop="True"
             DragOver="SettingMergerView_DragOver"
             Drop="SettingMergerView_Drop">
    <UserControl.Resources>
        <!-- Dark Theme Brushes -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TopBarBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#444444"/>
        <SolidColorBrush x:Key="TextBrush" Color="#D4D4D4"/>
        <SolidColorBrush x:Key="ComboBoxBackground" Color="#252526"/>
        <SolidColorBrush x:Key="ComboBoxForeground" Color="#D4D4D4"/>
    </UserControl.Resources>
    <Grid Background="{StaticResource WindowBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />   
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Left Settings: TeaxRelaySetting -->
        <local:SettingDisplayControl Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                                     DataContext="{Binding TeaxRelaySetting}" />

        <!-- 2 Buttons -->
        <Button Grid.Column="4" Grid.Row="0" Margin="2" Content="→"  Command="{Binding TakeTeaxDataCommand}"
                Background="{StaticResource ButtonBrush}" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}" />
        <Button Grid.Column="5" Grid.Row="0" Margin="2" Content="←" Command="{Binding TakeRPDataCommand}"
                Background="{StaticResource ButtonBrush}" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}" />

        <!-- Right Settings: ExcelRelaySetting -->
        <local:SettingDisplayControl Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="4"
                                     DataContext="{Binding ExcelRelaySetting}" />
    </Grid>
</UserControl>
