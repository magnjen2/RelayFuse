<UserControl x:Class="RelaySettingToolView.PdfSectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RelaySettingToolView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ViewResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Button x:Name="SaveTextFileButton"
                    Width="35"
                    Height="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    ToolTip="Export pdf"
                    Style="{StaticResource RoundedButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="24"
                           Text="&#xE74E;"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Button>
        </Grid>
        <TextBlock Text="PDF Section Content" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <!-- Add your PDF content here -->
    </Grid>
</UserControl>
