<UserControl x:Class="RelaySettingToolView.SettingDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32"
             d:DesignWidth="400">
    <UserControl.Resources>
        <!-- Dark Theme Brushes -->
        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TopBarBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#444444"/>
        <SolidColorBrush x:Key="TextBrush" Color="#D4D4D4"/>
        <SolidColorBrush x:Key="ComboBoxBackground" Color="#252526"/>
        <SolidColorBrush x:Key="ComboBoxForeground" Color="#D4D4D4"/>
        <!-- Match Indicator Brushes -->
        <SolidColorBrush x:Key="MatchColor" Color="Green"/>
        <SolidColorBrush x:Key="NoMatchColor" Color="#D4D4D4"/>
        <!-- Styles for Match Indicators -->
        <Style x:Key="UniqueIdTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForeground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding UniqueIdMatch}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource MatchColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DisplayNameTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForeground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DisplayNameMatch}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource MatchColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ValueTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForeground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ValueMatch}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource MatchColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0,2*" />
            <ColumnDefinition Width="0,4*" />
            <ColumnDefinition Width="0,3*" />
            <ColumnDefinition Width="0,1*" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Margin="2" Text="{Binding RelaySetting.UniqueId, Mode=OneWay}" IsReadOnly="True"
                 Background="{StaticResource ComboBoxBackground}" Foreground="{StaticResource ComboBoxForeground}" BorderBrush="{StaticResource BorderBrush}" Style="{StaticResource UniqueIdTextBoxStyle}" />
        <TextBox Grid.Column="1" Margin="2" Text="{Binding RelaySetting.DisplayName, Mode=OneWay}" IsReadOnly="True"
                 Background="{StaticResource ComboBoxBackground}" Foreground="{StaticResource ComboBoxForeground}" BorderBrush="{StaticResource BorderBrush}" Style="{StaticResource DisplayNameTextBoxStyle}" />
        <TextBox Grid.Column="2" Margin="2" Text="{Binding RelaySetting.SelectedValue, Mode=OneWay}" IsReadOnly="True"
                 Background="{StaticResource ComboBoxBackground}" Foreground="{StaticResource ComboBoxForeground}" BorderBrush="{StaticResource BorderBrush}" Style="{StaticResource ValueTextBoxStyle}" />
        <TextBox Grid.Column="3" Margin="2" Text="{Binding RelaySetting.Unit, Mode=OneWay}" IsReadOnly="True"
                 Background="{StaticResource ComboBoxBackground}" Foreground="{StaticResource ComboBoxForeground}" BorderBrush="{StaticResource BorderBrush}" />
    </Grid>
</UserControl>
