<UserControl x:Class="RelaySettingToolView.HmiTableMergerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RelaySettingToolView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1200"
             AllowDrop="True"
             DragOver="HmiTableMergerView_DragOver"
             Drop="HmiTableMergerView_Drop">
    
    
    <UserControl.Resources>

        <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E" />
        <SolidColorBrush x:Key="BorderBrush" Color="#444444" />
        <SolidColorBrush x:Key="TextBrush" Color="#D4D4D4" />
        <SolidColorBrush x:Key="ComboBoxBackground" Color="#252526" />
        <SolidColorBrush x:Key="ComboBoxForeground" Color="#D4D4D4" />

        <Style x:Key="StretchListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Titles -->
            <RowDefinition Height="*" />    <!-- SettingMergers List -->
            <RowDefinition Height="2*" />   <!-- NonMatchedSettings List -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Titles -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding TeaxHmiTable.HmiTable.DigsiPathString}" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Margin="8,8,0,8"
                   Foreground="{StaticResource TextBrush}"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ExcelHmiTable.HmiTable.DigsiPathString}" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,8,8,8"
                   Foreground="{StaticResource TextBrush}"/>

        <!-- SettingMergers List (Horizontal) -->
        <ListBox Grid.Row="1" Grid.ColumnSpan="2"
                 ItemsSource="{Binding SettingMergers}"
                 ItemContainerStyle="{StaticResource StretchListBoxItemStyle}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 Background="Transparent"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:SettingMergerView />
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <!-- NonMatchedSettings List (Bottom, right half) -->
        <ListBox Grid.Row="2" Grid.Column="1"
                 ItemsSource="{Binding NonMatchedSettings}"
                 ItemContainerStyle="{StaticResource StretchListBoxItemStyle}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 Background="Transparent"
                 BorderThickness="0"
                 PreviewMouseLeftButtonDown="NonMatchedSettings_PreviewMouseLeftButtonDown"
                 PreviewMouseMove="NonMatchedSettings_PreviewMouseMove">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:SettingDisplayControl />
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>



    </Grid>
</UserControl>
